{% extends '_layout.njk' %}
{% block title %}
  {{ config.title }}
  {% if config.subtitle %}- {{ config.subtitle }}{% endif %}
{% endblock %}
{% block description %}
  {{ config.title }} - {{ site.description }}
{% endblock description %}
{% block content %}
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-4">
      {%- for post in page.posts.toArray() %}
        <article itemscope
                 itemtype="http://schema.org/Article"
                 class="post-content p-6 bg-white border border-gray-200 rounded-lg shadow-md dark:bg-gray-800 dark:border-gray-700"
                 lang="{{ post.lang }}">
          <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-2"
              itemprop="headline">
            <a href="{{ url_for(post.path) }}">
              {% if post.title %}
                {{ post.title }}
              {% else %}
                No Title
              {% endif %}
            </a> <i class="fa-light fa-link ml-2"></i>
          </h2>
          <p class="text-gray-700 dark:text-gray-400 mb-4" itemprop="description">{{ post.description }}</p>
        </article>
      {%- endfor %}
    </div>
    {%- if page.prev or page.next %}
      <nav class="pagination">
        {{ next_paginator() }}
      </nav>
    {%- endif %}
  </div>
{% endblock %}
